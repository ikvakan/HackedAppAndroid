<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/background_light"
    app:cardCornerRadius="@dimen/cornerRadius"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/paddingMain">

        <ImageView
            android:id="@+id/ivItem"
            android:padding="9dp"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            tools:src="@drawable/hacked_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/tvCardWidth"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/tvCardTxtSize"
                    android:text="Company" />

                <TextView
                    android:id="@+id/tvCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:text="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/tvCardWidth"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/tvCardTxtSize"

                    android:text="Breach date" />

                <TextView
                    android:id="@+id/tvBreachDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textStyle="italic"
                    android:textAlignment="center"

                    android:text="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/tvCardWidth"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/tvCardTxtSize"
                    android:text="Breaches" />

                <TextView
                    android:id="@+id/tvNumOfBreaches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:maxLines="1"
                    android:textStyle="italic"
                    android:textAlignment="center"

                    android:text="text" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                app:cornerRadius="12dp"
                android:textColor="@android:color/white"
                android:background="@android:color/black"
                android:text="Source"/>

            <ImageView
                android:id="@+id/ivSavedBreach"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_star_border_24"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>